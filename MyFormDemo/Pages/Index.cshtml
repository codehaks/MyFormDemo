@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h2>Colors</h2>

<form method="post">

    <h3>Pick your favorite color : </h3>

    <input type="radio" id="White" name="color" value="White"> <label for="White">White</label><br>
    <input type="radio" id="Red" name="color" value="Red"><label for="Red">Red</label><br>
    <input type="radio" id="Green" name="color" value="Green"><label for="Green">Green</label><br>
    <input type="radio" id="Blue" name="color" value="Blue"><label for="Blue">Blue</label><br>
    <input type="radio" id="Orange" name="color" value="Orange"><label for="Orange">Orange</label><br>
    <input type="radio" id="Black" name="color" value="Black"><label for="Black">Black</label><br>



    <button class="btn btn-primary">Submit</button>
</form>